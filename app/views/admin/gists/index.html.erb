
<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <h1><%= t('.header') %></h1>
    
    <% if @gists.present? %>
    
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col"><%= t('.title') %></th>
            <th scope="col"><%= t('.email') %></th>
            <th scope="col"><%= t('.gist_url') %></th>
          </tr>
        </thead>
        <tbody>
          <%= render @gists %>
        </tbody>
        </table>
    <% else %>
      <p class="mt-5"><%= t('.not_found') %></p>
    <% end %>
  </div>
</div>
